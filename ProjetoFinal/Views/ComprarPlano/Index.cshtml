@model List<ProjetoFinal.Models.Plano>

@{
    ViewData["Title"] = "Comprar Planos";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Comprar Planos</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-controller="ComprarPlano" asp-action="Index" class="mb-4">
        <div class="input-group">
            <input type="text" name="nome" class="form-control" placeholder="Digite o nome do plano" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <!-- TABELA DE PLANOS -->
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Nome</th>
                <th>Valor (R$)</th>
                <th>Duração</th>
                <th>Requisitos</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Valor.ToString("F2")</td>
                    <td>@p.Duracao.ToString("dd/MM/yyyy")</td>
                    <td>@p.Requisitos</td>
                    <td>
                        <a class="btn btn-success btn-sm"
                           asp-controller="Pagamento"
                           asp-action="Cadastrar"
                           asp-route-id="@p.Codigo_Plano">
                            Comprar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary w-100 mt-3 mb-5"
       asp-controller="Gerenciar"
       asp-action="Gerenciar">
        Voltar
    </a>

</div>