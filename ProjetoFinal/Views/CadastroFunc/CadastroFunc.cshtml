@{
    ViewData["Title"] = "Cadastro de Funcionário";
}

<link href="~/../../../../área de trabalho/projetofinal/projetofinal/wwwroot/css/cadastrofunc.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 500px;">

    <h2 class="text-center mb-4">Cadastro de Funcionário</h2>

    <form asp-action="CadastroFunc" method="post">

        <div class="form-group mb-3">
            <label for="Nome">Nome Completo</label>
            <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Digite o nome completo" required />
        </div>

        <div class="form-group mb-3">
            <label for="CPF">CPF</label>
            <input type="text" class="form-control" id="Cpf" name="Cpf" placeholder="Digite o CPF" required />
        </div>

        <div class="form-group mb-4">
            <label for="RG">RG</label>
            <input type="text" class="form-control" id="Rg" name="Rg" placeholder="Digite o RG" required />
        </div>

        <button type="submit" class="btn btn-success w-100 mb-3">
            Confirmar Cadastro
        </button>

        <a class="btn btn-secondary w-100"
           asp-controller="LoginFunc"
           asp-action="LoginFunc">
            Voltar
        </a>

    </form>
</div>