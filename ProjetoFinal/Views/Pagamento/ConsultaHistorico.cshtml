@{
    ViewData["Title"] = "Consultar Histórico de Pagamentos";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Histórico de Pagamentos do Cliente</h2>

    <p>Digite o código do cliente para ver seu histórico de pagamentos:</p>

    <form method="get" asp-controller="Pagamento" asp-action="HistoricoCliente">
        <div class="input-group mb-3">
            <input type="number" name="codigoCliente" class="form-control" placeholder="Código do Cliente" required />
            <button type="submit" class="btn btn-primary">Ver Histórico</button>
        </div>
    </form>

    <a asp-controller="Consultar"
       asp-action="Consultar"
       class="btn btn-secondary w-100 mt-3">
        Voltar
    </a>
</div>