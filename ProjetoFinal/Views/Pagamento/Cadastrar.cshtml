@model ProjetoFinal.Models.Pagamento

@{
    ViewData["Title"] = "Cadastrar Pagamento";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Realizar Pagamento</h2>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success">
            @TempData["Sucesso"]
        </div>
    }

    <form asp-action="Cadastrar" method="post">
        <div class="mb-3">
            <label class="form-label">Titular</label>
            <input type="text" class="form-control" asp-for="Titular" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Valor</label>
            <input type="number" step="0.01" class="form-control" asp-for="Valor" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Método de Pagamento</label>
            <input type="text" class="form-control" asp-for="MetodoPagamento" />
        </div>

        <div class="mb-3">
            <label class="form-label">Código do Usuário</label>
            <input type="number" class="form-control" asp-for="Codigo_Usuario" required />
        </div>

        <button type="submit" class="btn btn-success w-100">Realizar Pagamento</button>
    </form>

    <a asp-controller="ComprarPlano" asp-action="Index" class="btn btn-secondary w-100 mt-3">Voltar</a>
</div>