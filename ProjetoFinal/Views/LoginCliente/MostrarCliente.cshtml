@model ProjetoFinal.Models.Usuario

<link href="~/css/logincliente.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Dados do Cliente</h2>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Código</th>
            <td>@Model.Codigo_Usuario</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>@Model.Nome</td>
        </tr>
        <tr>
            <th>CPF</th>
            <td>@Model.Cpf</td>
        </tr>
        <tr>
            <th>Idade</th>
            <td>@Model.Idade</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Rua</th>
            <td>@Model.Endereco.Rua</td>
        </tr>
        <tr>
            <th>Número</th>
            <td>@Model.Endereco.Numero</td>
        </tr>
        <tr>
            <th>Complemento</th>
            <td>@Model.Endereco.Complemento</td>
        </tr>
    </table>

    <a asp-controller="ClienteLoginConsulta"
       asp-action="LoginCliente"
       class="btn btn-secondary w-100 mt-3">
        Voltar
    </a>
</div>