@{
    ViewData["Title"] = "Login do Cliente";
}

<link href="c:\users\vini1\onedrive\área de trabalho\projetofinal\projetofinal\wwwroot\css\logincliente.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 450px;">
    <h2 class="text-center mb-4">Consultar Info do Cliente</h2>

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Erro"]
        </div>
    }

    <form method="post">

        <div class="form-group mb-3">
            <label for="Usuario">Nome ou Email</label>
            <input type="text" class="form-control" id="Usuario" name="Usuario"
                   placeholder="Digite seu nome ou email" required />
        </div>

        <div class="form-group mb-1">
            <label for="Senha">Senha</label>
            <input type="password" class="form-control" id="Senha" name="Senha"
                   placeholder="Digite sua senha" required />
        </div>

        <div class="text-end mb-4">
            <a asp-controller="InterCadastroCliente"
               asp-action="InterCadastroCliente"
               class="small text-decoration-none">
                Não possui cadastro? Clique aqui.
            </a>
        </div>

        <button type="submit" class="btn btn-primary w-100"
           asp-controller="ClienteLoginConsulta"
           asp-action="LoginCliente">
            Consultar
        </button>

        <a class="btn btn-secondary w-100"
           asp-controller="Home"
           asp-action="Index">
            Voltar
        </a>

    </form>
</div>