@model List<ProjetoFinal.Models.Usuario>

@{
    ViewData["Title"] = "Consulta de Clientes";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Clientes Registrados</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Idade</th>
                <th>Email</th>
                <th>Endereço</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Nome</td>
                    <td>@c.Cpf</td>
                    <td>@c.Idade</td>
                    <td>@c.Email</td>
                    <td>
                        Rua: @c.Endereco?.Rua<br />
                        Nº: @c.Endereco?.Numero<br />
                        Comp: @c.Endereco?.Complemento
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary w-100 mt-3 mb-5"
       asp-controller="Consultar"
       asp-action="Consultar">
        Voltar
    </a>

</div>