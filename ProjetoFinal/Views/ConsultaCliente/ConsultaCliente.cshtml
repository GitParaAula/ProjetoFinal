@model List<ProjetoFinal.Models.Usuario>

@{
    ViewData["Title"] = "Consulta de Clientes";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Consulta de Clientes</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-controller="ConsultaCliente" asp-action="ConsultaCliente" class="mb-4">
        <div class="input-group">
            <input type="text" name="nome" class="form-control" placeholder="Digite o nome do cliente" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <!-- TABELA -->
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Idade</th>
                <th>Email</th>
                <th>Endereço</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Nome</td>
                    <td>@c.Cpf</td>
                    <td>@c.Idade</td>
                    <td>@c.Email</td>
                    <td>
                        Rua: @c.Endereco?.Rua <br />
                        Nº: @c.Endereco?.Numero <br />
                        Comp: @c.Endereco?.Complemento
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary w-100 mt-3 mb-5"
       asp-controller="Consultar"
       asp-action="Consultar">
        Voltar
    </a>
</div>