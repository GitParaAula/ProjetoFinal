@model List<ProjetoFinal.Models.Plano>

@{
    ViewData["Title"] = "Consulta de Planos";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Consulta de Planos</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-controller="ConsultaPlano" asp-action="ConsultaPlano" class="mb-4">
        <div class="input-group">
            <input type="text" name="nome" class="form-control" placeholder="Digite o nome do plano" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <!-- TABELA -->
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Nome</th>
                <th>Valor (R$)</th>
                <th>Duração</th>
                <th>Requisitos</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Valor</td>
                    <td>@p.Duracao.ToString("dd/MM/yyyy")</td>
                    <td>@p.Requisitos</td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary w-100 mt-3 mb-5"
       asp-controller="Consultar"
       asp-action="Consultar">
        Voltar
    </a>

</div>