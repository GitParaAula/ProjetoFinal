@model List<ProjetoFinal.Models.Plano>

@{
    ViewData["Title"] = "Excluir Plano";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Excluir Plano</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-controller="ExcluirPlano" asp-action="ExcluirPlano" class="mb-4">
        <div class="input-group">
            <input type="text" name="nome" class="form-control" placeholder="Digite o nome do plano" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <!-- TABELA -->
    <table class="table table-striped table-bordered">
        <thead class="table-danger">
            <tr>
                <th>Nome</th>
                <th>Valor (R$)</th>
                <th>Duração</th>
                <th>Requisitos</th>
                <th>Excluir</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Valor</td>
                    <td>@p.Duracao.ToString("dd/MM/yyyy")</td>
                    <td>@p.Requisitos</td>

                    <td>
                        <button class="btn btn-danger w-auto"
                                onclick="confirmarExclusao(@p.Codigo_Plano)">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary w-100 mt-3 mb-5"
       asp-controller="Excluir"
       asp-action="Excluir">
        Voltar
    </a>
</div>

<script>
    function confirmarExclusao(id) {
        if (confirm("Tem certeza que deseja EXCLUIR este plano? Esta ação não poderá ser desfeita.")) {
            window.location.href = "/ExcluirPlano/Excluir?id=" + id;
        }
    }
</script>