@model List<ProjetoFinal.Models.Funcionario>

@{
    ViewData["Title"] = "Consulta de Funcionários";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Funcionários Registrados</h2>

    <!-- FILTRO POR NOME -->
    <form method="get" asp-action="ConsultaFuncionario" class="mb-4">
        <div class="input-group">
            <input type="text" name="nome" class="form-control"
                   placeholder="Digite o nome para consultar" />

            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>RG</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Nome</td>
                    <td>@f.Cpf</td>
                    <td>@f.Rg</td>

                    <td>
                        <a asp-controller="EditarFuncionario"
                           asp-action="Editar"
                           asp-route-id="@f.Codigo_funcionario"
                           class="btn btn-warning btn-sm">
                            Editar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary w-100 mt-3 mb-5"
       asp-controller="Atualizar"
       asp-action="Atualizar">
        Voltar
    </a>
</div>