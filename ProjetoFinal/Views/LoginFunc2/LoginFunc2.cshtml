@{
    ViewData["Title"] = "Login do Funcionário";
}

<link href="~/../../../../área de trabalho/projetofinal/projetofinal/wwwroot/css/loginfunc2.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 450px;">
    <h2 class="text-center mb-4">Login do Funcionário</h2>

    <form method="post" asp-action="Login" asp-controller="LoginFunc2">

        <div class="form-group mb-3">
            <label for="Nome">Nome do Funcionário</label>
            <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Digite seu nome" required />
        </div>

        <div class="form-group mb-4">
            <label for="Senha">Senha</label>
            <input type="password" class="form-control" id="Cpf" name="Cpf" placeholder="Digite sua senha" required />
        </div>

        <div class="text-end mb-4">
            <a asp-controller="CadastroFunc2"
               asp-action="CadastroFunc2"
               class="small text-decoration-none">
                Não possui cadastro? Clique aqui.
            </a>
        </div>

        <button type="submit" class="btn btn-primary w-100">Entrar</button>

        <a class="btn btn-secondary w-100"
           asp-controller="InterCadastroCliente"
           asp-action="InterCadastroCliente">
            Voltar
        </a>

    </form>
</div>